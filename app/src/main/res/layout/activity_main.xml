    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btn_ui_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UIView"
        android:textSize="18dp" />

    <Button
        android:id="@+id/jia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jia"
        android:textSize="18dp" />

    />
    <Button
        android:id="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
